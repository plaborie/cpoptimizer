Product = Sim
ProductShort = sim
Version = 0.1

# PathPrefix will be used, together with the short name of
# the product, and the short version number, to find where
# tarz should be made.
# If this does not fit your need, you can specify a complete
# path using e.g.
#   Path = /nfs/schedule/sim/sim01
#
PathPrefix = /nfs/schedule/sim

# default file name
LibFileName = "libsim.a"

# The leading directory name for the tarz can be automatically
# computed from the short name of the product and the version
# number. But you can also specify it explicitely
#   TarzTopDir = sim01

# Libs this product depends on
#
DependsOn = solver52 concert12

# List of multi-threaded distributed examples (without extension)
# You can specify more than one. Just separate them
# with some spaces.
#
MtExamples = 

